        stage('test') {
            agent {
                docker
                {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                echo 'test stage'
                test -f build/index.html
                npm test
                '''
            }
        }

        stage('deploy') {
            agent {
                docker
                {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                npm install netlify-cli
                node_modules/.bin/netlify --version
                '''
            }
        }
    }
}
